<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{yy-MM-dd HH:mm:ss}] [%class{0}.%method:%line] - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.ntt.app" level="info">
        <appender-ref ref="STDOUT" />
    </logger>

    <root level="warn">
        <appender-ref ref="STDOUT" />
    </root>
    
</configuration>
